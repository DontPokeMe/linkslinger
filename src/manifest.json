{
  "manifest_version": 3,
  "name": "LinkSlinger",
  "version": "3.1.0",
  "description": "Select, open, copy, or bookmark multiple links at once. Part of the dontpoke.me toolkit.",

  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "ui/options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "scripting",
    "clipboardWrite",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["pages/test_area.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
